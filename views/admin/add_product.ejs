<%- include('admin_head', { title: 'home page' }) -%>	 

		<!-- BREADCRUMB -->
		<div id="breadcrumb" class="section">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">
					<div class="col-md-12">
						<h3 class="breadcrumb-header">Add new product</h3>
						<ul class="breadcrumb-tree">
							<li><a href="#">Admin</a></li>
							<li class="active">Add product</li>
						</ul>
					</div>
				</div>
				<!-- /row -->
			</div>
			<!-- /container -->
		</div>
		<!-- /BREADCRUMB -->

		<!-- SECTION -->
		<div class="section">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">

					<div class="col-md-7">
						<!-- Register Details -->
						<div class="billing-details">
							<div class="section-title col-md-12">
								<h3 class="title">Product information</h3>
							</div>
							<form action="" method="post">
							<div class="form-group col-md-12">
								<input class="input" type="text" name="name" placeholder="Product name*" required>
							</div>
							<div class="form-group col-md-6">
								<label for="exampleFormControlSelect1">Select Category*</label>
								<select class="form-control input" id="exampleFormControlSelect1" name="category" required >
									<option>guitars&basses</option>
									<option>drums&percussions</option>
									<option>pianos&synths</option>
									<option>accessories</option>
								</select>
							</div>
							<div class="form-group col-md-6">
								<label for="exampleFormControlSelect1">Select SubCategory*</label>
								<select class="form-control input" id="exampleFormControlSelect1" name="subcategory" required >
									<option>electric guitar</option>
									<option>acoustic guitar</option>
									<option>classical guitar</option>
									<option>electric basse</option>
									<option>acoustic basse</option>
									<option>acoustic drum</option>
									<option>electronic drum</option>
									<option>percussion</option>
									<option>piano</option>
									<option>digital piano</option>
									<option>keyboard</option>
									<option>accessories</option>
								</select>
							</div>
							<div class="form-group col-md-4">
								<input class="input" type="text" name="price" placeholder="Price*" required>
							</div>
							<div class="form-group col-md-4">
								<input class="input" type="text" name="in_stock" placeholder="In Stock*">
							</div>
							<div class="form-group col-md-4">
								<input class="input" type="text" name="brand" placeholder="Brand*">
							</div>
							<div class="form-group col-md-12">
								<label for="imageupload">choose product image*</label>
    							<input type="file" class="form-control-file" name="image" id="imageupload" required multiple> 
							</div>
							<div class="form-group col-md-12">
								<label for="imageupload">choose product sound*</label>
    							<input type="file" class="form-control-file" name="sound" id="imageupload">
							</div>
							<div class="form-group col-md-12">
								<input class="input" type="text" name="video" placeholder="Video URL*" >
							</div>
							
							<div class="form-group col-md-12">
								<textarea class="input" type="text" name="description" placeholder="Descriptions"></textarea>
							</div>
							
							<div class="form-group col-md-12">
								<button type="submit" class="primary-btn btn-lg order-submit " style="width: 100%;">Add Product</button>
							</div>
							
							</form>

						</div>
						<!-- /Register Details -->
					</div>	

				</div>
				<!-- /row -->
			</div>
			<!-- /container -->
		</div>
		<!-- /SECTION -->

<%- include('admin_foot') -%>		
